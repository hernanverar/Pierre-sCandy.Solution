@{
    Layout = "_Layout";
}

@model PierreSweets.Models.Treat

<h2>Recipe Details</h2>
<hr />
<div>
    <h3>@Html.DisplayNameFor(model => model.TreatName): @Html.DisplayFor(model => model.TreatName)</h3>
    <h4>Ingredients:</h4>
    <p>@Model.Description</p>
    <h4>Instructions:</h4>
    <p>@Model.Description</p> 
</div>

@if (Model.JoinEntities.Count == 0)
{
    <p>This recipe does not have any tags yet!</p>
}
else
{
    <h4>This recipe has the following tags:</h4>
    <ul>
        @foreach (var join in Model.JoinEntities)
        {
            <li>Tag: @join.Treat.Description</li>
        }
    </ul>
}

<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Edit Recipe", "Edit", new { id = Model.TreatId })</p>
<p>@Html.ActionLink("Add Tag", "AddTag", new { id = Model.TreatId })</p>
<p>@Html.ActionLink("Delete Recipe", "Delete", new { id = Model.TreatId })</p>