@{
    Layout = "_Layout";
}
@using PierreSweets.Models
@model PierreSweets.Models.Treat

<h2>Treat Details</h2>
<hr />
<div>
    <h3>@Html.DisplayNameFor(model => model.TreatName): @Html.DisplayFor(model => model.TreatName)</h3>
    <h3>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</h3>   
</div>

@if (Model.JoinEntities.Count == 0)
{
    <p>This treat does not have any flavors yet!</p>
}
else
{
    <h4>This Treat has the following flavors:</h4>
  <ul>
    @foreach(TreatFlavor join in Model.JoinEntities)
    {
    <li>Flavor: @join.Flavor.Description</li>
      @using (Html.BeginForm("DeleteJoin", "Treats"))
      {
        @Html.Hidden("joinId", @join.TreatFlavorId)
        <input type="submit" value="Delete"/>
      }
    }
  </ul>
}

<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Edit Recipe", "Edit", new { id = Model.TreatId })</p>
<p>@Html.ActionLink("Add Flavors", "AddFlavor", new { id = Model.TreatId })</p>
<p>@Html.ActionLink("Delete Treat", "Delete", new { id = Model.TreatId })</p>